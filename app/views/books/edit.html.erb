<% if @book.errors.any? %>
<div class="error-message text-danger">
  <h2><%= pluralize(@book.errors.count, "error" )%> prohibited this product from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="book-edit mt-3 mx-auto col-6">
  <h1 class="book-edit-title">Editing Book</h1>
  <div class="book-edit-body">
    <%= form_with model: @book, local: true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit "Update Book", class: "d-block btn btn-success my-3" %>
    <% end %>
  </div>
  <div class="book-edit-links">
    <%= link_to "Show", book_path(@book)%> | <%= link_to "Back", books_path %>
  </div>
</div>