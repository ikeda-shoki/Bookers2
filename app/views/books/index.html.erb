<% if @book.errors.any? %>
<div class="error-message">
  <h2><%= pluralize(@book.errors.count, "error" )%> prohibited this product from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="main">
  <%= render 'books/list', user: @user, book: @book %>
  </div>
  <div class="main-right">
    <div class="main-books">
      <h2 class="main-books-title">
        Books
      </h2>
      <div class="main-books-items">
        <table class="books-table">
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
              </td>
              <td>
                <%= link_to book.title , book_path(book.id)  %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </table>
        <%= paginate @books %>
      </div>
    </div>
  </div>
</div>