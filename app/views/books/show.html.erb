<% if @book.errors.any? %>
<div class="error-message text-danger">
  <h2><%= pluralize(@book.errors.count, "error" )%> prohibited this product from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="main row mt-3">
  <%= render 'books/list', user: @user, book: @book %>
  <div class="main-right col-md-8">
    <div class="main-books">
      <h2 class="main-books-title">
        Book detail
      </h2>
      <table class="table main-book-edit">
        <tr>
          <td>
            <%= attachment_image_tag(@user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40", class: "d-block") %>
            <%= link_to @user.name, user_path(@user), class: "d-block" %>
          </td>
          <td>
            <%= link_to @books.title, book_path(@books) %>
          </td>
          <td>
            <%= @books.body %>
          </td>
          <% if @books.user_id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@books), class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@books), method: :delet, data: {confirm: "本当に消しますか？"}, class: "btn btn-danger" %>
            </td>
          <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>