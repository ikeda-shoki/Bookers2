<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/*******.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark">
      <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <%= link_to "Bookers", root_path, class: "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
              <li class="header-nav-item nav-item">
                <% if user_signed_in? %>
                  <%= link_to user_path(current_user.id), class: "nav-link" do %>
                    <strong><i class="fas fa-home pr-1"></i>Home</strong>
                  <% end %>
                <% else %>
                  <%= link_to root_path, class: "nav-link" do %>
                    <strong><i class="fas fa-home pr-1"></i>Home</strong>
                  <% end %>
                <% end %>
              </li>
              <% if user_signed_in? %>
                <li class="header-nav-item nav-item">
                  <%= link_to users_path, class: "nav-link" do %>
                    <strong><i class="fas fa-users pr-1"></i>Users</strong>
                  <% end %>
                </li>
                <li class="header-nav-item nav-item">
                  <%= link_to books_path, class: "nav-link" do %>
                    <strong><i class="fas fa-book-open pr-1"></i>Books</strong>
                  <% end %>
                </li>
                <li class="header-nav-item nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
                    <strong><i class="fas fa-sign-out-alt pr-1"></i>logout</strong>
                  <% end %>
                </li>
              <% else %>
                <li class="header-nav-item nav-item">
                  <%= link_to home_about_path, class: "nav-link" do %>
                    <strong><i class="fas fa-link pr-1"></i>About</strong>
                  <% end %>
                </li>
                <li class="header-nav-item nav-item">
                  <%= link_to new_user_registration_path, class: "nav-link" do %>
                    <strong><i class="fas fa-user-plus pr-1"></i>sign up</strong>
                  <% end %>
                </li>
                <li class="header-nav-item nav-item">
                  <%= link_to new_user_session_path, class: "nav-link"  do %>
                    <strong><i class="fas fa-sign-in-alt pr-1"></i>login</strong>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </header>

    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key} text-success") %>
    <% end %>
    
    <div class="container">
      <%= yield %>
    </div>

    <footer>
      <div class="top-footer text-center mt-5">
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>

  </body>
</html>
