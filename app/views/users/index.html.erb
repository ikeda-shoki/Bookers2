<% if @book.errors.any? %>
<div class="error-message text-danger">
  <h2><%= pluralize(@book.errors.count, "error" )%> prohibited this product from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="main row mt-3">
  <%= render 'books/list', user: @user, book: @book %>
  <div class="main-right col-md-8 ">
    <div class="main-books">
      <h2 class="main-books-title">
        Users
      </h2>
      <div class="main-books-items">
        <table class="books-table table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag(user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40') %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </table>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>